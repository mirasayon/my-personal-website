{
    "compilerOptions": {
        "tsBuildInfoFile": "./build.tsbuildinfo",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "#/*": ["./src/*"],
            "%/*": ["./src/components/*"]
        },
        "target": "ESNext"
    },
    "include": [
        "next-env.d.ts",
        "./src",
        ".next/dev/types/**/*.ts",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}

